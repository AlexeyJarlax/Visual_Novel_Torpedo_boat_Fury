<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- СТИЛИ ДЛЯ ФОНОВ-->
    <!-- Стиль для главного меню-->
    <style name="FrontMenuLayout" parent="Widget.MaterialComponents.TextView">
        <item name="buttonStyle">@style/SecondaryButtonsAndText</item>
        <item name="android:textSize">@dimen/text_size_sp16</item>
        <item name="android:textColor">@color/yp_black_and_yp_black</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/yp_blue_and_yp_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/dp16</item>
    </style>

    <!-- Стиль для вложенных менюшек-->
    <style name="BackMenuLayout" parent="Widget.MaterialComponents.TextView">
        <item name="buttonStyle">@style/SecondaryButtonsAndText</item>
        <item name="android:textSize">@dimen/text_size_sp16</item>
        <item name="android:textColor">@color/yp_black_and_yp_white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/yp_white_and_yp_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- СТИЛИ ДЛЯ КНОПОК, ДИНАМИЧЕСКИХ ЭЛЕМЕНТОВ-->
    <!-- Стиль кнопок для главного меню -->
    <style name="MainMenuButtons" parent="Widget.MaterialComponents.Button">
        <item name="buttonStyle">@style/MainMenuButtons</item>
        <item name="android:textSize">@dimen/text_size_sp22</item>
        <item name="android:textColor">@color/yp_black_and_yp_black</item>
        <item name="android:padding">@dimen/dp8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">@dimen/button_weight</item>
        <item name="cornerRadius">@dimen/dp16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dp16</item>
        <item name="iconSize">@dimen/dp24</item>
        <item name="iconTint">@color/yp_black_and_yp_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/yp_white_and_yp_white</item>
    </style>

    <!-- Стиль кнопок и текста для вложенных менюшек-->
    <style name="SecondaryButtonsAndText" parent="Widget.MaterialComponents.Button">
        <item name="buttonStyle">@style/SecondaryButtonsAndText</item>
        <item name="android:textSize">@dimen/text_size_sp16</item>
        <item name="android:textColor">@color/yp_black_and_yp_white</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">@dimen/dp16</item>
        <item name="iconSize">@dimen/dp24</item>
        <item name="iconTint">@color/yp_text_gray_and_yp_white</item>
        <item name="android:textAllCaps">false</item> <!-- капс -->
        <item name="android:padding">@dimen/dp16</item>
        <item name="android:elevation">0dp</item> <!-- тени -->
        <item name="android:stateListAnimator">@null</item> <!-- анимации нажатия -->
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:backgroundTint">@color/yp_white_and_yp_black</item>
    </style>

    <!-- Стиль для кнопки возврата назад во вложенных менюхах-->
    <style name="GoBackButtons" parent="Widget.MaterialComponents.Button">
        <item name="buttonStyle">@style/SecondaryButtonsAndText</item>
        <item name="android:textSize">@dimen/text_size_sp22</item>
        <item name="android:textColor">@color/yp_black_and_yp_white</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">0dp</item>
        <item name="icon">@drawable/ic_launcher_foreground</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dp16</item>
        <item name="iconSize">@dimen/dp24</item>
        <item name="iconTint">@color/yp_black_and_yp_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/dp16</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/yp_white_and_yp_black</item>
    </style>

    <!-- Стиль строки ввода поиска-->
    <style name="SearchButtons" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/util_rounded_corners_8dp_light_gray</item>
        <item name="android:textSize">@dimen/text_size_sp16</item>
        <item name="android:textColor">@color/yp_black_and_yp_black</item>
        <item name="android:textColorHint">@color/yp_text_gray_and_yp_black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/app_name</item>
        <item name="android:autofillHints">truth</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="SearchIconStyle" parent="SearchButtons">
        <item name="android:tint">@color/yp_text_gray_and_yp_black</item>
        <item name="android:background">@color/yp_light_gray_and_yp_white</item>
    </style>

    <style name="TrackStyleCustom" parent="SearchButtons">
        <item name="android:tint">@color/yp_text_gray_and_yp_white</item>
        <item name="android:background">@color/yp_white_and_yp_black</item>
    </style>

    <style name="IcPoint" parent="TrackStyleCustom">
        <item name="android:layout_margin">0dp</item>"
    </style>

    <style name="Placeholder" parent="TrackStyleCustom">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@android:color/transparent</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">-4dp</item>
    </style>

    <style name="ErrorTransparent" parent="TrackStyleCustom">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@android:color/transparent</item>
    </style>

    <!-- Стиль строки c названием песни-->
    <style name="TrackText" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_sp16</item>
        <item name="android:textColor">@color/yp_black_and_yp_white</item>
        <item name="android:textColorHint">@color/yp_text_gray_and_yp_black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:elevation">0dp</item> <!-- тени -->
        <item name="android:stateListAnimator">@null</item> <!-- анимацию нажатия -->
    </style>

    <!-- Стиль строки c автором, продолжительностью-->
    <style name="TrackTextSmall" parent="TrackText">
        <item name="android:textSize">@dimen/text_size_sp11</item>
        <item name="android:textColor">@color/yp_text_gray_and_yp_white</item>
    </style>

    <!-- Стиль строк в проигрывателе title-->
    <style name="TitleTextSmall" parent="TrackText">
        <item name="android:textSize">@dimen/text_size_sp13</item>
        <item name="android:textColor">@color/yp_text_gray_and_yp_text_gray</item>
    </style>

    <!-- Стиль строк в проигрывателе Content-->
    <style name="ContentTextSmall" parent="TitleTextSmall">
        <item name="android:textColor">@color/yp_black_and_yp_white</item>
    </style>

    <!-- Стиль строк в проигрывателе track_name-->
    <style name="TrackNameText" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_sp22</item>
        <item name="android:textColor">@color/yp_black_and_yp_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:elevation">0dp</item> <!-- тени -->
        <item name="android:stateListAnimator">@null</item> <!-- анимацию нажатия -->
    </style>

    <!-- Стиль строк в проигрывателе track_name-->
    <style name="TrackArtistText" parent="TrackNameText">
        <item name="android:textSize">@dimen/text_size_sp14</item>
    </style>



    <!-- Стиль строки c описанием ошибки, стиль строки с историей поиска "вы искали"-->
    <style name="ErrorTextBig" parent="TrackText">
        <item name="android:textSize">@dimen/text_size_sp19</item>
        <item name="android:textColor">@color/yp_black_and_yp_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    НОВЫЕ

    <style name="ErrorButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/yp_white_and_yp_black</item>
        <item name="android:textSize">@dimen/text_size_sp16</item>
        <item name="cornerRadius">@dimen/dp24</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/yp_black_and_yp_white</item>
        <item name="android:padding">6dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GoMenuButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size_sp22</item>
        <item name="android:textColor">@color/yp_black_and_yp_white</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/dp6</item>
        <item name="android:elevation">0dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <!-- Панель с ресурсами"-->
    <style name="Resurses" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_sp22</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:padding">@dimen/dp6</item>
        <item name="android:paddingStart">@dimen/dp6</item>
        <item name="android:paddingEnd">@dimen/dp6</item>
        <item name="android:elevation">0dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
</resources>